        "description": "get the details of previous slots in a list",
        "responses": {
          "200": {
            "$ref": "#/responses/PreviousSlotResponse"
          }
        }
      }
    },
    "/upcomming/slots/v1/": {
      "get": {
        "security": [{
          "oauth": [
            "read",
						"write"
					]
				}],
