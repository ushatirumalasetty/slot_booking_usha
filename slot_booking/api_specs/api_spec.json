
{
  "swagger": "2.0",
  "host": "127.0.0.1:8080",
  "basePath": "/slot_booking/",
  "info": {
    "version": "1.0.0",
    "title": "Slot Booking",
    "description": "Slot Booking"
  },
  "schemes": [
		"https",
		"http"
	],
  "consumes": [
		"application/json"
	],
  "produces": [
		"application/json"
	],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read users",
        "write": "create users",
        "update": "update users",
        "delete": "delete users",
        "superuser": "super user permission"
      },
      "type": "oauth2"
    }
  },
  "definitions": {
    "SlotDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          }
        },
        "required": [
					"start_time",
					"end_time"
				]
      }
    },
    "UserDefinitions": {
      "type": "object",
      "properties": {
        "user_id": {
          "type": "integer"
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "user_name": {
          "type": "string"
        }
      },
      "required": [
					"user_id",
					"first_name",
					"last_name",
					"user_name"
				]
    },
    "PreviousSlotDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "washing_machine_id": {
            "type": "string"
          }
        },
        "required": [
					"start_time",
					"end_time",
					"date",
					"washing_machine_id"
				]
      }
    },
    "WashingMachinesDetailsDefinitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "washing_machine_id": {
            "type": "string"
          }},
          "required": [
					"washing_machine_id"
				]
      }
    },
    "SlotStatusDefintions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          },
          "is_avilable": {
            "type": "boolean"
          }
        }
      }
    },
    "RequestsDefintions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/definitions/UserDefinitions"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "washing_machine_id": {
            "type": "string"
          },
          "slot_start_time": {
            "type": "string"
          },
          "slot_end_time": {
            "type": "string"
          },
          "request_status": {
            "type": "string",
            "enum": [
							"APPROVED",
							"REJECTED",
							"PENDING"
						]

          }

        },
        "required": [
          "washing_machine_id",
          "date",
          "slot_start_time",
          "slot_end_time",
          "request_status"
          ]
      }
    },
    "SlotsWithExtraFieldDate": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "slots": {
            "$ref": "#/definitions/SlotStatusDefintions"
          }
        },
        "required": [
					"date"
				]
      }
    }
  },
  "parameters": {
    "UserSignUpParameter": {
      "name": "Signup",
      "description": "details for an user sign up",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "user_name": {
            "type": "string"
          },
          "passward": {
            "type": "string"
          },
          "confirm_passward": {
            "type": "string"
          }
        },
        "required": [
  					"user_name",
  					"passward",
  					"confirm_passward"
  				]
      }
    },
    "UserLoginParameter": {
      "name": "Login",
      "description": "user login details",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
					"username",
					"password"
				]
      }
    },
    "WashingMachineWiseDaySlotsParameter": {
      "name": "WashingMachineWiseDaySlots",
      "description": "slots of an particular washing machine on a particular day",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "day": {
            "type": "string",
            "enum": [
							"SUNDAY",
							"MONDAY",
							"TUESDAY",
							"WEDNESDAY",
							"THURSDAY",
							"FRIDAY",
							"SATERDAY"
						]
          },
          "washing_machine_id": {
            "type": "string"
          }
        },
        "required": [
					"day",
					"washing_machine_id"
				]
      }
    },
    "AddaWashingMachineParameter": {
      "name": "AddaWashingMachine",
      "description": "add a washing machine to the current database",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "washing_machine_id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
							"ACTIVE",
							"INACTIVE"
						]
          }
        },
        "required": [
					"washing_machine_id",
					"status"
				]
      }
    },
    "ExtraWashingMachineWiseDaySlotsParameter": {
      "name": "AddWashingMachineWiseDaySlots",
      "description": "Add slots of an particular washing machine on a particular day",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "day": {
            "type": "string",
            "enum": [
							"SUNDAY",
							"MONDAY",
							"TUESDAY",
							"WEDNESDAY",
							"THURSDAY",
							"FRIDAY",
							"SATERDAY"
						]
          },
          "washing_machine_id": {
            "type": "string"
          },
          "start_time": {
            "type": "string"
          },
          "end_time": {
            "type": "string"
          }
        },
        "required": [
					"day",
					"washing_machine_id",
					"start_time",
					"end_time"
				]
      }
    },
    "UpdateAWashingMachineSlotParameter": {
      "name": "UpdateWashingMachineWiseDaySlots",
      "description": "Update slots of an particular washing machine on a particular day",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "day": {
            "type": "string",
            "enum": [
							"SUNDAY",
							"MONDAY",
							"TUESDAY",
							"WEDNESDAY",
							"THURSDAY",
							"FRIDAY",
							"SATERDAY"
						]
          },
          "washing_machine_id": {
            "type": "string"
          },
          "old_start_time": {
            "type": "string"
          },
          "old_end_time": {
            "type": "string"
          },
          "new_start_time": {
            "type": "string"
          },
          "new_end_time": {
            "type": "string"
          }
        },
        "required": [
					"day",
					"washing_machine_id",
					"old_start_time",
					"old_end_time",
					"new_start_time",
					"new_end_time"
				]
      }
    },
    "BookSlotParameter": {
      "name": "BookSlot",
      "description": "Book a required avilable slot",
      "in": "body",
      "required": true,
      "schema": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "start_time": {
            "type": "string",
            "format": "datetime"
          },
          "end_time": {
            "type": "string",
            "format": "datetime"
          }
        },
        "required": [
					"date",
					"start_time",
					"end_time"
				]
      }
    }
  },
  "responses": {
    "GetUserProfileResponse": {
      "description": "Success Response",
      "schema": {
        "type": "object",
        "properties": {
          "first_name": {
            "type": "string"
          },
          "last_name": {
            "type": "string"
          },
          "user_name": {
            "type": "string"
          }
        },
        "required": [
					"first_name",
					"last_name",
					"user_name"
				]
      }
    },
    "GetAccessTokenResponse": {
      "description": "Success Response",
      "schema": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          }
        },
        "required": [
					"access_token"
				]
      }
    },
    "GetDateWiseSlotResponse": {
      "description": "Get Datewise Slots available and booked",
      "schema": {
        "$ref": "#/definitions/SlotsWithExtraFieldDate"
      }
    },
    "WashingMachineWiseDaySlotsResponse": {
      "description": "Get washing machinewise Slots on a particular day",
      "schema": {
        "$ref": "#/definitions/SlotDefinitions"
      }
    },
    "GetWashingMachinesDetailsResponse": {
      "description": "Get the details of all the washing machines",
      "schema": {
        "$ref": "#/definitions/WashingMachinesDetailsDefinitions"
      }
    },
    "GetRequestDetailsResponse": {
      "description": "Get the details of all the requests of an user",
      "schema": {
        "$ref": "#/definitions/RequestsDefintions"
      }
    },
    "PreviousSlotResponse": {
      "description": "Get previous slots of an user",
      "schema": {
        "$ref": "#/definitions/PreviousSlotDefinitions"
      }
    },
    "BookSlotResponse": {
      "description": "Success Response",
      "schema": {
        "type": "object",
        "properties": {
          "washing_machine_id": {
            "type": "string"
          },
          "start_time": {
            "type": "string",
            "format": "datetime"
          },
          "end_time": {
            "type": "string",
            "format": "datetime"
          },
          "date": {
            "type": "string",
            "format": "date"
          }
        },
        "required": [
					"washing_machine_id",
					"start_time",
					"end_time",
					"date"
				]
      }
    }
