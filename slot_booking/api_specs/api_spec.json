      "get": {
        "summary": "Get details of all the washing machines",
        "operationId": "get_washing_machines_details",
        "description": "get details of all the washing machines",
        "security": [{
          "oauth": [
						"read",
						"write"
					]
				}],
        "responses": {
          "200": {
            "$ref": "#/responses/GetWashingMachinesDetailsResponse"
